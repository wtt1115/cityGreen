/* pages/interaction/interaction.wxss */
.interaction{
  font-size:14px;
}
.add_img{
  width:100rpx;
  height:100rpx;
  position:fixed;
  top:50%;
  margin-top:-50rpx;
  right:20rpx;
  z-index: 100;
}
.interaction_top{
  height:376rpx;
  margin-bottom:60rpx;
}
.interaction_top_img{
  width:100%;
  height:100%;
}
.interaction_cont{
  padding:0 40rpx 40rpx 100rpx;
}
.interaction_cont_li{
  position:relative;
  margin-bottom:100rpx;
}
.cont_img{
  width:33%;
  height:186rpx;
  margin-top:3rpx;
  margin-right:3rpx;
}
.cont_img:nth-child(3n){
   margin-right:0;
}
.userImg{
  width:80rpx;
  height:80rpx;
  border-radius: 8rpx;
  position:absolute;
  top:-10rpx;
  left:-85rpx;
}
.operation{
  margin-top:40rpx;
  position:relative;
}
.time{
  margin-right:100rpx;
}
.operating_btn{
  width:58rpx;
  height:38rpx;
  position:absolute;
  right:10rpx;
  top:50%;
  margin-top:-20rpx;
}

/**************** 点赞评论按钮*****************/
.btn_box{
  background: #4d5154;
  width:400rpx;
  height:80rpx;
  position:absolute;
  top:50%;
  margin-top:-40rpx;
  right:80rpx;
  border-radius: 10rpx;
  overflow: hidden;
  padding:20rpx 0;
}
.discuss_btn,.like_btn{
  width:50%;
  height:100%;
  color:#fff;
  line-height:40rpx;
  text-align: center; 
}
.like_btn{
  border-right:1px solid #ddd;
}
.input_box{
  width:100%;
  border:1px solid #ddd;
  background: #fff;
  padding:20rpx 10px;
}
.send_btn{
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  border:1px solid rgb(0,218,183);
  color:rgb(0,218,183);
  border-radius: 25rpx;
  text-align: center;
  margin-top:30rpx;
}
.inputs{
  flex:1;
  padding:0 10rpx;
  margin:30rpx 0;
}
.hidenIuput{
  position: absolute;
  left:0;
  z-index:-100;
  top:-200px;
}
.showInput{
  position:fixed;
  z-index:100;
   /* top:240px;-20 */
}
.sendcolor{
  background: rgb(0,218,183);
  color:#fff;
}