<!--pages/invitation/invitation.wxml-->
<view class="root">
  <view  class="backgroundImage">
    <image src="{{backgroundImg}}"></image>
  </view>
  <view class="promptly" bindtap="butSubmit">
    <button>立即邀请</button>
  </view>
  <view class="foot">
    <!-- 分享 -->
    <view class="shareBox">
      <image src="{{shareImg}}"></image>
      <view class="shareTitle">
        <view class="shareQr">分享二维码</view>
        <view class="sharefriend">邀请朋友注册成功</view>
        <view class="sharefriend">并购买服务，加积分</view>
      </view>
    </view>
    <!-- 二维码 -->
    <view class="QRCode">
      <image  class="QRCodeBorder" src="{{qrCodeImg}}"></image>
      <view class="knowCode">
        <text class="know">识别</text>
        <text class="code">二维码</text>
      </view>
    </view>
  </view>
</view>
